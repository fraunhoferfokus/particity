<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>paadmin</portlet-name>
		<icon>/icon.png</icon>

		<scheduler-entry>
			<scheduler-description>TestScheduler</scheduler-description>
			<scheduler-event-listener-class>
				de.fraunhofer.fokus.oefit.particity.scheduler.TenMinuteScheduler
			</scheduler-event-listener-class>
			<trigger>
				<simple>
					<simple-trigger-value>10</simple-trigger-value>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<scheduler-entry>
			<scheduler-description>TestScheduler</scheduler-description>
			<scheduler-event-listener-class>
				de.fraunhofer.fokus.oefit.particity.scheduler.DailyScheduler
			</scheduler-event-listener-class>
			<trigger>
				<simple>
					<simple-trigger-value>1</simple-trigger-value>
					<time-unit>day</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<scheduler-entry>
			<scheduler-description>TestScheduler</scheduler-description>
			<scheduler-event-listener-class>
				de.fraunhofer.fokus.oefit.particity.scheduler.WeeklyScheduler
			</scheduler-event-listener-class>
			<trigger>
				<simple>
					<simple-trigger-value>1</simple-trigger-value>
					<time-unit>week</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<scheduler-entry>
			<scheduler-description>TestScheduler</scheduler-description>
			<scheduler-event-listener-class>
				de.fraunhofer.fokus.oefit.particity.scheduler.HourlyScheduler
			</scheduler-event-listener-class>
			<trigger>
				<simple>
					<simple-trigger-value>1</simple-trigger-value>
					<time-unit>hour</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>paadmin</friendly-url-mapping>
		<friendly-url-routes>de/fraunhofer/fokus/oefit/particity/portlet/routes.xml</friendly-url-routes>
		<instanceable>false</instanceable>

		<private-session-attributes>true</private-session-attributes>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<footer-portlet-css>/css/main.css</footer-portlet-css>
		<footer-portlet-css>/css/fileinput.min.css</footer-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<footer-portlet-javascript>/js/backend.js</footer-portlet-javascript>
		<footer-portlet-javascript>/js/fileinput.min.js</footer-portlet-javascript>
		<css-class-wrapper>ahadmin</css-class-wrapper>

		<add-default-resource>true</add-default-resource>
	</portlet>

	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>